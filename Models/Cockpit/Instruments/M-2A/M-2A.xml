<?xml version="1.0"?>

<!-- Манометр - М-2А -->
<!-- 2011, Сергей "Mercenary_Mercury" Салов -->

<PropertyList>

 <path>M-2A.ac</path>

 <animation>
  <type>material</type>
  <object-name>face</object-name>
  <object-name>M-2A.needle1</object-name>
  <object-name>M-2A.needle2</object-name>
  <emission>
   <red>0.8</red>
   <green>0.8</green>
   <blue>0.8</blue>
   <factor-prop>mig29/systems/cockpitlighting/instruments-norm</factor-prop>
  </emission>
 </animation>

 <animation>
  <type>material</type>
  <object-name>screws</object-name>
  <emission>
   <red>0.8</red>
   <green>0.8</green>
   <blue>0.8</blue>
   <factor-prop>mig29/systems/cockpitlighting/panel-norm</factor-prop>
  </emission>
 </animation>

 <animation>
  <type>shader</type>
  <shader>chrome</shader>
  <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
  <object-name>glass</object-name>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>M-2A.needle1</object-name>
  <!--property>mig29/instrumentation/M-2A/A</property-->
  <property>controls/gear/brake-left</property>
  <factor>180</factor>
  <center>
   <x-m> 0.000</x-m>
   <y-m>-0.004</y-m>
   <z-m> 0.000</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y> 0</y>
   <z> 0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>M-2A.needle2</object-name>
  <!--property>mig29/instrumentation/M-2A/B</property-->
  <property>controls/gear/brake-right</property>
  <factor>180</factor>
  <center>
   <x-m>0.000</x-m>
   <y-m>0.004</y-m>
   <z-m>0.000</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y> 0</y>
   <z> 0</z>
  </axis>
 </animation>

</PropertyList>