<?xml version="1.0"?>

<PropertyList>

 <path>hcgp.ac</path>

 <animation>
  <type>material</type>
  <object-name>hcgp.case</object-name>
  <object-name>hcgp.baselever1</object-name>
  <object-name>hcgp.baselever2</object-name>
  <object-name>hcgp.lever1</object-name>
  <object-name>hcgp.lever2</object-name>
  <emission>
   <red>  0.8</red>
   <green>0.8</green>
   <blue> 0.8</blue>
   <factor-prop>mig29/systems/cockpitlighting/panel-norm</factor-prop>
  </emission>
 </animation>

 <animation>
  <type>material</type>
  <object-name>hcgp.PTA</object-name>
  <emission>
   <red>  0.8</red>
   <green>0.8</green>
   <blue> 0.8</blue>
   <factor-prop>mig29/systems/cockpitlighting/panel-R-norm</factor-prop>
  </emission>
 </animation>

 <!-- Обогрев кабины: "авт.", "хол.", "гор.". -->
 <animation>
  <type>rotate</type>
  <object-name>hcgp.lever1</object-name>
  <property>mig29/o/snv</property>
  <interpolation>
   <entry><ind>0</ind><dep>-20</dep></entry>
   <entry><ind>1</ind><dep> 20</dep></entry>
  </interpolation>
  <center>
   <x-m>-0.041</x-m>
   <y-m> 0.000</y-m>
   <z-m> 0.020</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
 <animation>
  <type>rotate</type>
  <object-name>hcgp.lever1</object-name>
  <property>mig29/o/snv</property>
  <interpolation>
   <entry><ind>0</ind><dep>  0</dep></entry>
   <entry><ind>1</ind><dep>-20</dep></entry>
   <entry><ind>2</ind><dep> 20</dep></entry>
  </interpolation>
  <center>
   <x-m>-0.041</x-m>
   <y-m> 0.000</y-m>
   <z-m> 0.020</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>

 <!-- Обогрев стекла, ПВД -->
 <animation>
  <type>rotate</type>
  <object-name>hcgp.lever2</object-name>
  <property>mig29/switches/glass-pito-heat</property>
  <interpolation>
   <entry><ind>0</ind><dep>-20</dep></entry>
   <entry><ind>1</ind><dep> 20</dep></entry>
  </interpolation>
  <center>
   <x-m>-0.041</x-m>
   <y-m> 0.000</y-m>
   <z-m>-0.025</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y> 0</y>
   <z> 0</z>
  </axis>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>hcgp.cz1</object-name>
  <visible>false</visible>
  <action>
   <button>0</button>
   <repeatable>false</repeatable>
   <binding>
    <command>property-assign</command>
    <property>mig29/o/snv</property>
    <value>0</value>
   </binding>
  </action>
 </animation>
 <animation>
  <type>pick</type>
  <object-name>hcgp.cz2</object-name>
  <visible>false</visible>
  <action>
   <button>0</button>
   <repeatable>false</repeatable>
   <binding>
    <command>property-assign</command>
    <property>mig29/o/snv</property>
    <value>1</value>
   </binding>
  </action>
 </animation>
 <animation>
  <type>pick</type>
  <object-name>hcgp.cz3</object-name>
  <visible>false</visible>
  <action>
   <button>0</button>
   <repeatable>false</repeatable>
   <binding>
    <command>property-assign</command>
    <property>mig29/o/snv</property>
    <value>2</value>
   </binding>
  </action>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>hcgp.cz4</object-name>
  <visible>false</visible>
  <action>
   <button>0</button>
   <repeatable>false</repeatable>
   <binding>
    <command>property-assign</command>
    <property>mig29/switches/glass-pito-heat</property>
    <value>1</value>
   </binding>
  </action>
 </animation>
 <animation>
  <type>pick</type>
  <object-name>hcgp.cz5</object-name>
  <visible>false</visible>
  <action>
   <button>0</button>
   <repeatable>false</repeatable>
   <binding>
    <command>property-assign</command>
    <property>mig29/switches/glass-pito-heat</property>
    <value>0</value>
   </binding>
  </action>
 </animation>

 <animation>
  <type>textranslate</type>
  <object-name>hcgp.case</object-name>
  <object-name>hcgp.baselever1</object-name>
  <object-name>hcgp.baselever2</object-name>
  <object-name>hcgp.lever1</object-name>
  <object-name>hcgp.lever2</object-name>
  <property>mig29/systems/cockpitlighting/texturep</property>
  <factor>0.5</factor>
  <step>1</step>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

</PropertyList>